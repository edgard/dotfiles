#!/usr/bin/env bash
# Fetch secrets from Bitwarden during initial setup
set -euo pipefail

# Skip if bw not installed
command -v bw &>/dev/null || { echo "==> Skipping secrets (bw not installed)"; exit 0; }

# Call the update script's secrets function
if [ -x "$HOME/.local/bin/update" ]; then
    "$HOME/.local/bin/update" --profile "{{ .profile }}" secrets
else
    echo "==> Skipping secrets (update script not found)"
fi
