[core]
	excludesfile = ~/.gitignore_global
[fetch]
	prune = true
[push]
	default = simple
[rebase]
	autosquash = true
[color]
	ui = auto
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[status]
	showUntrackedFiles = all
[transfer]
	fsckobjects = true
[user]
	name = Edgard Castro
	email = edgardcastro@gmail.com
[alias]
	br = branch
	ci = commit
	co = checkout
	dc = diff --cached
	df = diff
	dump = cat-file -p
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --date=short
	lg = log -p
	pr = pull --rebase
	review = "!f() { local SHA=${1:-HEAD}; local BRANCH=${2:-master}; if [ $SHA == $BRANCH ]; then SHA=HEAD; fi; git difftool -y -t Kaleidoscope $BRANCH...$SHA; }; f"
	st = status
	stash-all = stash save --include-untracked
	type = cat-file -t
	undo = reset --soft HEAD^
[branch "master"]
	mergeoptions = --ff-only
[http "https://gopkg.in"]
	followRedirects = true
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[diff]
	tool = Kaleidoscope
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool]
	prompt = false
[merge]
	tool = Kaleidoscope
