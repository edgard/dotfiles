[core]
	excludesfile = ~/.gitignore_global
[fetch]
	prune = true
[push]
	default = simple
[color]
	ui = auto
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[user]
	name = Edgard Castro
	email = edgardcastro@gmail.com
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --date=short
	type = cat-file -t
	dump = cat-file -p
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[merge]
	tool = vimdiff
[mergetool]
	prompt = true
[mergetool "vimdiff"]
	cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[http "https://gopkg.in"]
	followRedirects = true
