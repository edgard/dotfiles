[core]
	excludesfile = ~/.gitignore_global
[fetch]
	prune = true
[push]
	default = simple
[color]
	ui = auto
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[user]
	name = Edgard Castro
	email = edgardcastro@gmail.com
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --date=short
	type = cat-file -t
	dump = cat-file -p
[http "https://gopkg.in"]
	followRedirects = true
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[difftool]
	prompt = false
[mergetool]
	prompt = false
[diff]
	tool = Kaleidoscope
[commit]
