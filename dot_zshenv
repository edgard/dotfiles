#!/usr/bin/env zsh
# shellcheck disable=all

# --- Zsh Environment Configuration ---
# This file is sourced on every shell startup, including non-interactive ones.
# It should contain environment variable settings and essential shell options
# that need to be available globally. Avoid commands that produce output here.

# --- Shell Options ---

unsetopt GLOBAL_RCS    # Prevent sourcing of global Zsh config files (e.g., /etc/zshrc)
skip_global_compinit=1 # Prevent global compinit from running

# --- Locale Configuration ---

export LC_ALL="${LC_ALL:-en_US.UTF-8}"
export LANG="${LANG:-en_US.UTF-8}"
export LANGUAGE="${LANGUAGE:-en_US.UTF-8}"
