# Common Brewfile for baseline setup
# Contains packages and apps used across profiles (macOS)

##############################################################################
# Taps
##############################################################################

tap "buo/cask-upgrade"

##############################################################################
# CLI Tools
##############################################################################

brew "direnv"
brew "fd"
brew "atuin"
brew "mas"
brew "starship"
brew "typst"
brew "watch"
brew "zoxide"

##############################################################################
# Development Tools
##############################################################################

brew "gh"
brew "go"
brew "jq"
brew "node"
brew "shellcheck"
brew "yq"
brew "prettier"
brew "yamlfmt"
brew "yamllint"

brew "colima"
brew "docker"

brew "helm"
brew "kind"
brew "kubernetes-cli"
brew "krew"
brew "kubectx"
brew "oras"

##############################################################################
# macOS Applications (Casks)
##############################################################################

cask "affinity"
cask "appcleaner"
cask "ghostty"
cask "kdenlive"
cask "rectangle"
cask "steermouse"
cask "cursor"
cask "visual-studio-code"
cask "vlc"

##############################################################################
# Mac App Store Applications
##############################################################################

mas "Amphetamine", id: 937984704
